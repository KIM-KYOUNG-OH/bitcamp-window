<script type="text/javascript">
$(function(){
	$('#btn').submit(function(){
		var email = $("input").eq(0).text();
		var pwd = $("input").eq(1).text();
		
		localStorage["email"] = email;
		localStorage["pwd"] = pwd;
		alert(email);
		alert(pwd);
		if(email != 'kdkg0434@gmail.com'){
			$("#alert").addClass("alert alert-danger");
			var s = "<b>이메일 오류</b>";
			$("#alert").html(s);
			
		}else if(pwd != 'a1234'){
			$("#alert").addClass("alert alert-danger");
			var s = "<b>비밀번호 오류</b>";
			$('#alert').html(s);
			alert(s);
		}else if(email == 'kdkg0434@gmail.com' && pwd == 'a1234'){
			location.href = 'note.html';
		}
	});
	
});
</script>
