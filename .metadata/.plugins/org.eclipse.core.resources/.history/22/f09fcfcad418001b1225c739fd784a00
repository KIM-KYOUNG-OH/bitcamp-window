<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<style>
	#buttons,#inputform,updateform{
		margin-bottom:30px;
	}
	
	#sawonlist table{
		width: 800px;
		text-align: center;
		border: 1px solid gray;
	}
	
	#sawonlist table th{
		text-align: center;
		background-color: cyan;
	}
	
	.modal-header, h4, .close {
    background-color: #5cb85c;
    color:white !important;
    text-align: center;
    font-size: 30px;
	}
</style>
<script type="text/javascript">
	$(function(){
		// 추고폼이랑 수정폼은 안보이게 처리
		$("#inputform").hide();
		$("#updateform").hide();
		listData();
		//listDate() //처음 시작시 기존 데이터와 출력
		
		// 사원정보추가 버튼을 클릭하면 폼이 보였다 안보였다하도록 하기
		$("#btnform").click(function(){
			$("#inputform").slideToggle('fast');
		});
		
		$("#btnlist").click(function(){
			$("#sawonlist").slideToggle("fast");
		});
		// 추가버튼
		$('#btnadd').click(function(){
			//값 읽어오기
			var name = $("#name").val();
			var address = $("#address").val();
			
			// 이름, 주소, 입력체크
			if(name == ''){
				alert('이름을 입력해주세요');
				$('#name').focus();
				return; // 함수 종료
			}
			if(address == ''){
				alert('주소를 입력해주세요');
				$('#address').focus();
				return; // 함수 종료
			}
			// 운전면허, 성별 가져오기
			var driver=$("input[name='driver']:checked").val(); // 체크한 값 가져오기
			var gender=$("input[name='gender']:checked").val();
			var birthday=$("#birthday").val();
			//alert(driver+"\n"+gender+"\n"+birthday);
			
			//추가하는 함수 호출-읽은 변수가 지역변수라
			//함수 매개변수로 보낸다
			addData(name, address, driver, gender, birthday);
		});
		
		//삭제
		$(document).on("click","button.delete",function(){
			var num = $(this).attr("num");
			$("#dialog-confirm").dialog({
		      resizable: false,
		      height: "auto",
		      width: 400,
		      modal: true,
		      buttons: {
		        "예": function() {
		        	deleteData(num);
		          $( this ).dialog( "close" );
		        },
		        "아니요": function() {
		          $( this ).dialog( "close" );
		        }
		      }
		    }).css("display","block");
		});
		
		$(document).on("click","button.update",function(){
	    	$("#myModal").modal();
	    	var num = $(this).find('sawon').find('num').text();
	    	console.log(num);
	    	getData(num);
	  	});
		
	});//function close
	//사용자 함수들
	
	//삭제하는 함수
	function deleteData(num){
		$.ajax({
			type:'get',
			dataType:'html',
			url:'./sawondelete.jsp',
			data:{'num':num},
			success:function(data){
				listData();
			}
		});
	}
	
	// modal 열기
	function getData(num){
		
	}
	
	//데이터추가
	function addData(name, address, driver, gender, birthday){
		//alert(driver);
		$.ajax({
			type:'post',
			url:'sawoninsert.jsp',
			dataType:'html',
			data:{"name":name,"address":address,"driver":driver,"gender":gender,"birthday":birthday},
			success:function(data){
				//다시 출력하기
				listData();
				//입력값 초기화
				$('#name').val("");
				$("#address").val("");
			}
		});
	}
	
	//데이터 출력
	function listData(){
		$.ajax({
			type:"get",
			url:"./sawonlist.jsp",
			dataType:"xml",
			success:function(data){
				var s = "<table class='table table-bordered'>";
				s += "<caption><b style='color: red;'>총 "+($(data).find('sawon').length)+"개의 데이터</b></caption>";
				s += "<thead><tr><th>번호</th><th>이름</th><th>운전면허</th><th>성별</th><th>주소</th>"+
				   "<th>출생일</th><th>관리</th></tr></thead>";
				s += "<tbody>";
				$(data).find('sawon').each(function(i, elem){
					var n = $(elem);
					var num = n.attr('num');
					s += "<tr>";
					s += "<td>" +(i+1)+ "</td>";
					s += "<td>" +n.find('name').text()+ "</td>";
					s += "<td>" +n.find('driver').text()+ "</td>";
					s += "<td>" +n.find('gender').text()+ "</td>";
					s += "<td>" +n.find('address').text()+ "</td>";
					s += "<td>" +n.find('birthday').text()+ "</td>";
					s += "<td>";
					s += "<button type='button' class='update btn btn-info btn-xs'"
					+"num='" +num+ "'>수정</buttom>";
					s += "&nbsp;&nbsp;";
					s += "<button type='button' class='delete btn btn-danger btn-xs'"
						+"num='" +num+ "'>삭제</buttom>";
					s += "</tr>";
				});
				s += "</tbody></table><br><br>";
				$("#sawonlist").html(s);
			}
		});
	}
</script>
</head>
