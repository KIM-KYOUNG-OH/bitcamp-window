<script type="text/javascript">
$(function(){
	$("#dialog-form").hide();
	showDatas();
	
	$("#create_data").click(function(){
		$("#dialog-form").show();
	});
	
	// 노트 추가
	$("#btnadd").click(function(){
		var title = $("#title").val();
		var description = $("#description").val();
		var commention = $("#comment").text();
		var image = $("#image").val();
		var dueDate = $("#dueDate").val();
		$.ajax({
			type:'get',
			url:'./insertdata.jsp',
			datatype:'html',
			data:{"title":title,"description":description,"commention":commention,
				"image":image,"dueDate":dueDate},
			success:function(data){
				
				showDatas();
				$("#title").val('');
				$("#description").val('');
				$("#comment").val('');
				$("#image").val('');
				$("#dueDate").val('');
				$("#dialog-form").hide();
			}
		});
	});
});

function showDatas(){
	$.ajax({
		type: 'post',
		url: "./showdatas.jsp",
		dataType:'json',
		success:function(data){
			var s = '';
			$(data).each(function(i, elt) {
				s += "<div class='lst'>";
				s += "<b>"+(i+1)+". "+elt.title+ "</b><br>";
				if(elt.description){
					s += "<span class='glyphicon glyphicon-align-left'></span><br>";
				}
				if(elt.image){
					s += "<img class='imgs' src='"+elt.image+"'>";
				}
				s += "</div><hr>";
			});
			
			$("#datas").html(s);
		}
	});
}

</script>
<body>
